    "version": "0.2.0",
    "configurations": [
        {
            "type": "node-terminal",
            "name": "Node.JS Debugger: Debug current file",
            "request": "launch",
            "command": "node ${file}",
            "cwd": "${workspaceFolder}",
			"outputCapture": "console"
        },
        {
            "type": "node-terminal",
            "name": "Node.JS Debugger: Start",
            "request": "launch",
            "command": "npm run start",
            "cwd": "${workspaceFolder}",
            "outputCapture": "console",
        }
    ]
}